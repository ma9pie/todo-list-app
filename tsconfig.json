{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/constants/*": ["constants/*"],
      "@/components/*": ["components/*"],
      "@/shared/*": ["components/shared/*"],
      "@/layouts/*": ["components/layouts/*"],
      "@/api/*": ["pages/api/*"],
      "@/recoil/*": ["recoil/*"],
      "@/hooks/*": ["hooks/*"],
      "@/utils/*": ["utils/*"],
      "@/types": ["types/types"],
      "@/pages/*": ["pages/*"],
      "@/public/*": ["public/*"],
      "@/styles/*": ["styles/*"],
      "@/svgs/*": ["components/svgs/*"],
      "@/images/*": ["public/images/*"]
    },
    "types": ["@emotion/react/types/css-prop"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/test.js"],
  "exclude": ["node_modules"]
}
